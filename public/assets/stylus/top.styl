    top 20px
    left 20px
.index1
  .bx-caption
    top 50px
    left 50px
.index2
  .bx-caption
    top 80px
    left 80px
.index3
  .bx-caption
    top 110px
    left 110px
.index4
  .bx-caption
    top 140px
    left 140px

